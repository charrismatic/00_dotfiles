######################   COLOR RELATED OPTIONS    ##########################
# Set a fancy prompt (non-color, unless we know we "want" color)
case "$TERM" in
    xterm-color|*-256color) color_prompt=yes;;
esac

# Uncomment for a colored prompt, if the terminal has the capability;
#force_color_prompt=yes
if [ -n "$force_color_prompt" ]; then
    if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
    # PASSED CHECK FOR COLOR SUPPORT ASSUME compliant with Ecma-48 (ISO/IEC-6429).
    color_prompt=yes
    else
    color_prompt=
    fi
fi

#http://misc.flogisoft.com/bash/tip_colors_and_formatting
if [ "$color_prompt" = yes ]; then
  PS1='\[\033[1;36m\]\d\[\033[1;31m\]|\[\033[1;33m\]`date +%H:%M`\n\[\033[1;34m\]\u\[\033[0;31m\]@\[\033[1;32m\]\h:\[\033[1;35m\]\W \$\[\033[0m\] '
else
  PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi
unset color_prompt force_color_prompt


#############        COLOR FOR    LESS COMMAND        ###############################
# If using less to view man pages you can add below variables to .bashrc file.
# After reload .bashrc variables with command: source /home/
# user/.bashrc and you will see colored man pages.
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;31m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'


