# =============================================================================
## USERSPACE 
# =============================================================================

## HOME DIRECTORY BIN
# -----------------------------------------------------------------------------
# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
  PATH="$HOME/bin:$PATH"
fi

if [ -d "$HOME/.local/bin" ] ; then
  PATH="$HOME/.local/bin:$PATH"
fi

## THIRD PARTY APP DIRECTORY
# -----------------------------------------------------------------------------
if [ -d "/data/apps/bin" ] ; then
    PATH="/data/apps/bin:$PATH"
fi

# =============================================================================
## PACKAGE MANAGER PATHS
# =============================================================================

## NPM - NODE PACKAGE MANAGER
# -----------------------------------------------------------------------------
if [ -d "$HOME/nodejs/bin" ] ; then
    PATH="$HOME/nodejs/bin:$PATH"
fi

## SYSTEM FOLDER FOR GLOBAL PACKAGES
if [ -d "/usr/local/nodejs/bin" ] ; then
    PATH="/usr/local/nodejs/bin:$PATH"
fi


## RUBY GEMS
# -----------------------------------------------------------------------------
# set PATH to include Ruby Gems location
if [ -d "$HOME/.gem/ruby/2.3.0/bin" ] ; then
    PATH="$HOME/.gem/ruby/2.3.0/bin:$PATH"
fi

## GO
# ----------------------------------------------------------------------------- 
## CHOOSE SYSTEM WIDE INSTALL 
if [ -d "/usr/local/go/bin" ] ; then
    PATH=$PATH:/usr/local/go/bin
fi
## CHOOSE LOCAL USER INSTALL
#if [ -d "$HOME/go/bin" ] ; then
#    PATH=$PATH:$HOME/go/bin
#fi


export PATH
