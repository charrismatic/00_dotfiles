{
  "browsersync": false,
  "colorguard": {},
  "colorguide": {
    "name": "colorguide",
    "path": "source/styles/theme/colorguide.scss",
    "assets": "source/styles/examples/colors/*"
  },
  "autoprefixer": {
    "browsers": [
      "> 1%",
      "last 2 versions",
      "Firefox ESR"
    ],
    "env": "",
    "add": true,
    "remove": true,
    "supports": true,
    "flexbox": "no-2009",
    "grid": false
  },
  "cssnano": {
    "preset": "default",
    "zindex": false,
    "colormin": true,
    "discardComments": {
      "removeAll": true
    }
  },
  "livereload": false,
  "postcss": {
    "parser": "sugarss",
    "map": false,
    "plugins": {
      "postcss-plugin": {}
    }
  },
  "sass": {
    "outputStyle": "expanded",
    "precision": 5,
    "includePaths": ["."]
  },
  "sassdoc": {
    "src": "source/styles/theme/**/*.scss",
    "watch": "source/styles/modules/web_components/**/*.scss",
    "dest": "public/docs/sassdoc"
  },
  "styleguide": {
    "name": "styleguide",
    "src": "source/styles/modules/web_components/web_components.scss",
    "watch": [
      "source/styles/modules/web_components/**/*.scss",
      "source/styles/modules/web_components/base/*.scss"
    ],
    "save_css": true,
    "template_src": "source/styles/modules/web_components/styleguide.scss",
    "template_dest": "build/css/styleguide",
    "dest": "public/docs/styleguide"
  },
  "stylestats": {
    "src": "build/css/*.css",
    "dest": "public/docs/stylestats",
    "output": "stylestats"
  },
  "todo": {
    "name": "todo",
    "src": [
      "source/scripts/**/*.js",
      "source/styles/**/*.scss"
    ],
    "format": "md",
    "customTags": [
      "note",
      "bug",
      "fixme",
      "changed",
      "review",
      "deprecated"
    ],
    "verbose": true,
    "dest": "public/docs/todo"
  },
  "styles": [{
      "name": "style",
      "path": "source/styles/theme/style.scss",
      "dest": "public/content/themes/fnh",
      "sourcemap": true,
      "save_build": true,
      "min": true,
      "watch": [
        "source/styles/library/**/*.scss",
        "source/styles/components/**/*.scss",
        "source/styles/theme/*.scss",
        "source/styles/theme/wp/**/*.scss",
        "source/styles/theme/charrismatic/**/*.scss"
      ]
    },
    {
      "name": "admin_styles",
      "path": "source/styles/theme/admin_styles.scss",
      "dest": "public/content/themes/fnh/assets/css/",
      "min": false,
      "save_build": true,
      "sourcemap": false,
      "watch": [
        "source/styles/theme/admin/source/**/*.scss"
      ]
    }
  ]
}
